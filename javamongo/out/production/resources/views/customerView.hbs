<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Customer Catalog</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.2/css/bulma.min.css">
</head>
<body>
<section class="section">
  <div class="container">
    {{#if customers}}
      <h1 class="title">List of all {{@numberOfCustomers}} customers</h1>
      <div class="content">
        <table class="table is-striped is-hoverable">
          <thead>
          <tr>
            <th>Customer Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>City</th>
            <th>Country</th>
            <th>District</th>
            <th>Phone</th>
          </tr>
          </thead>
          <tbody>
          {{#each customers}}
            <tr>
              <td><strong>{{@customerId}}</strong></td>
              <td><text style="text-transform: capitalize;">{{@firstName}}</td>
              <td><text style="text-transform: capitalize;">{{@lastName}}</td>
              <td><text style="text-transform: capitalize;">{{@address}}</td>
              <td><text style="text-transform: capitalize;">{{@city}}</td>
              <td><text style="text-transform: capitalize;">{{@country}}</td>
              <td><text style="text-transform: capitalize;">{{@district}}</td>
              <td>{{@phone}}</td>
              <td>

              </td>
            </tr>
          {{/each}}
          </tbody>
        </table>
      </div>
    {{else}}
      <h1>No customers yet :(</h1>
    {{/if}}
  </div>
</section>
</body>
</html>
